@{
    Layout = "~/Views/master/_Layout.cshtml";
    ViewBag.Title = "出差补助标准";
}
<script src="../../Scripts/jc/jcCommon.js" type="text/javascript"></script>
<div class="easyui-layout" id="ccbzbz-dataregion" data-options="fit:true" z="1">
    <div data-options="region:'north'" style="height: 51px">
        <div style="padding: 2px 0 2px 2px; background: #fafafa; border: 1px solid #ccc;">
                   <a href="#" class="easyui-linkbutton" 
                   id="ccbzbz-add" 
                   data-options="plain:'true',iconCls:'icon-xinzeng',
                   bindmethod:{ 'click':['newlyAdd'] },scope:'ccbzbz',status:'1',
                   forbidstatus:[1,2,3]">新增</a> 
                   
                   <a href="#" class="easyui-linkbutton"
                   id="ccbzbz-edit" data-options="plain:'true',iconCls:'icon-xiugai',
                   docState:'ccbzbz-SS_Allowance-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'ccbzbz',status:'2',
                   forbidstatus:[1,2,3]">修改</a> 
                       
                   <a href="#" class="easyui-linkbutton" 
                   id="ccbzbz-remove" 
                   data-options="plain:'true',iconCls:'icon-shanchu',
                   docState:'ccbzbz-SS_Allowance-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'ccbzbz',status:'3',
                   forbidstatus:[1,2,3]">删除</a>

                   <a href="#" class="easyui-linkbutton" id="ccbzbz-disable"
                   data-options="plain:'true',iconCls:'icon-tingyong',
                   bindmethod:{ 'click': ['setDisable'] },
                   bindparms:{'setDisable':['ccbzbz-SS_Allowance-IsStop','ccbzbz-tree-Allowance']},scope:'ccbzbz',status:'2',
                   forbidstatus:[1,2,3]">停用</a> 

                   <a href="#" class="easyui-linkbutton" id="ccbzbz-enable"
                   data-options="plain:'true',iconCls:'icon-qiyong',
                   bindmethod:{ 'click': ['setEnable'] },
                   bindparms:{'setEnable':['ccbzbz-SS_Allowance-IsStop','ccbzbz-tree-Allowance']},scope:'ccbzbz',status:'2',
                   forbidstatus:[1,2,3]">启用</a>

                   <a href="#" class="easyui-linkbutton" id="ccbzbz-cancel" data-options="
                    plain:'true',iconCls:'icon-quxiao', scope:'ccbzbz',forbidstatus:[4],
                    bindmethod:{ 'click': ['cancel'] }">取消</a> 
                   
                   <a href="#" class="easyui-linkbutton" id="ccbzbz-save"
                   data-options="plain:'true',iconCls:'icon-baocun',
                   treeId:['ccbzbz-tree-Allowance'],
                   bindmethod:{ 'click': ['saveDoc'] },
                   bindparms:{'saveDoc':['/JCqtsz/Save']},scope:'ccbzbz',status:'4',
                   forbidstatus:[4]">保存</a> 
                 
                   <a href="#" class="easyui-linkbutton"
                   id="ccbzbz-close" data-options="plain:'true',iconCls:'icon-tuichu',
                   bindmethod:{ 'click': ['closeTab'] },
                   scope:'ccbzbz'">退出</a>
        </div>
    </div>
    <div data-options="region:'west',split:'true'" style="width: 300px">
        <div class="easyui-tabs" data-options="fit:true">
            <div title="补助项目">
                <ul class="easyui-tree" id="ccbzbz-tree-Allowance" 
                 data-options="associate:{
                    'ccbzbz-SS_Allowance-GUID':['GUID'],
                    'ccbzbz-SS_Allowance-AllowanceKey':['AllowanceKey'],
                    'ccbzbz-SS_Allowance-AllowanceName':['AllowanceName'],
                    'ccbzbz-SS_Allowance-AllowanceType':['AllowanceType'],
                    'ccbzbz-SS_Allowance-DefaultValue':['DefaultValue'],
                    'ccbzbz-SS_Allowance-IsStop':['IsStop']
                  },
                  bindmethod:{'onClick': ['setAssociate'] },
                  url:'/Tree/GetBaseAllowanceTree',
                  controlId:['ccbzbz-SS_Allowance-GUID'],
                  customBindFirst:true,
                  findParent:false,
                  retStatus:'4',
                  method:'post'">
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" style="width: 600px" data-options="fit:true">
        <table border="0" style="height:auto; width: auto;padding: 0 0 0 150px">
            <tr>
                <td colspan="4" style="height: 100px;">
                    <div style="font-size: x-large; text-align: center;">
                        补&nbsp;助&nbsp;项&nbsp;目</div>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-AllowanceKey">
                        补助编号</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="ccbzbz-SS_Allowance-AllowanceKey" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-AllowanceName">
                        补助名称</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="ccbzbz-SS_Allowance-AllowanceName" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-AllowanceType">
                        补助类型</label>
                </td>
                <td>
                    <input class="easyui-numberbox" id="ccbzbz-SS_Allowance-AllowanceType" data-options="forbidstatus:[4],min:0,max:99"/>
                </td>
                <td>
                    <label for="field1" id="lbl-DefaultValue">
                        默认值</label>
                </td>
                <td>
                    <input class="easyui-numberbox" id="ccbzbz-SS_Allowance-DefaultValue" data-options="forbidstatus:[4],precision:2,min:0,max:99999999.99"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="ccbzbz-SS_Allowance-IsStop" data-options="forbidstatus:[4]"/>是否停用
                </td>
            </tr>
        </table>
    </div>
    <input class="easyui-validatebox" id="ccbzbz-SS_Allowance-GUID" type="hidden"></input>
</div>
<label id="ccbzbz-extendregion" style="display: none">
    <input id="ccbzbz-status" type="text"/>
    <input id="initscope" type="text" value='ccbzbz'/>
    <input id="initstatus" type="text" value='4'/>
    <input id="initguid" type="text" value=''/>
</label>
<div id="b-window" line="true"></div>

@{
    Layout = "~/Views/master/_Layout.cshtml";
    ViewBag.Title = "交通工具";
}
<script src="../../Scripts/jc/jcCommon.js" type="text/javascript"></script>
<div class="easyui-layout" id="jtgj-dataregion" data-options="fit:true" z="1">
    <div data-options="region:'north'" style="height: 51px">
        <div style="padding: 2px 0 2px 2px; background: #fafafa; border: 1px solid #ccc;">
                   <a href="#" class="easyui-linkbutton" 
                   id="jtgj-add" 
                   data-options="plain:'true',iconCls:'icon-xinzeng',
                   bindmethod:{ 'click':['newlyAdd'] },scope:'jtgj',status:'1',
                   forbidstatus:[1,2,3]">新增</a> 
                   
                   <a href="#" class="easyui-linkbutton"
                   id="jtgj-edit" data-options="plain:'true',iconCls:'icon-xiugai',
                   docState:'jtgj-SS_Traffic-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'jtgj',status:'2',
                   forbidstatus:[1,2,3]">修改</a> 
                       
                   <a href="#" class="easyui-linkbutton" 
                   id="jtgj-remove" 
                   data-options="plain:'true',iconCls:'icon-shanchu',
                   docState:'jtgj-SS_Traffic-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'jtgj',status:'3',
                   forbidstatus:[1,2,3]">删除</a>

                   <a href="#" class="easyui-linkbutton" id="jtgj-disable"
                   data-options="plain:'true',iconCls:'icon-tingyong',
                   bindmethod:{ 'click': ['setDisable'] },
                   bindparms:{'setDisable':['jtgj-SS_Traffic-IsStop','jtgj-tree-PayOutType']},scope:'jtgj',status:'2',
                   forbidstatus:[1,2,3]">停用</a> 

                   <a href="#" class="easyui-linkbutton" id="jtgj-enable"
                   data-options="plain:'true',iconCls:'icon-qiyong',
                   bindmethod:{ 'click': ['setEnable'] },
                   bindparms:{'setEnable':['jtgj-SS_Traffic-IsStop','jtgj-tree-PayOutType']},scope:'jtgj',status:'2',
                   forbidstatus:[1,2,3]">启用</a>

                   <a href="#" class="easyui-linkbutton" id="jtgj-cancel" data-options="
                    plain:'true',iconCls:'icon-quxiao', scope:'jtgj',forbidstatus:[4],
                    bindmethod:{ 'click': ['cancel'] }">取消</a> 
                   
                   <a href="#" class="easyui-linkbutton" id="jtgj-save"
                   data-options="plain:'true',iconCls:'icon-baocun',
                   treeId:['jtgj-tree-PayOutType'],
                   bindmethod:{ 'click': ['saveDoc'] },
                   bindparms:{'saveDoc':['/JCqtsz/Save']},scope:'jtgj',status:'4',
                   forbidstatus:[4]">保存</a> 
                 
                   <a href="#" class="easyui-linkbutton"
                   id="jtgj-close" data-options="plain:'true',iconCls:'icon-tuichu',
                   bindmethod:{ 'click': ['closeTab'] },
                   scope:'jtgj'">退出</a>
        </div>
    </div>
    <div data-options="region:'west',split:'true'" style="width: 300px">
        <div class="easyui-tabs" data-options="fit:true">
            <div title="支出类型">
                <ul class="easyui-tree" id="jtgj-tree-PayOutType" 
                 data-options="associate:{
                    'jtgj-SS_Traffic-GUID':['GUID'],
                    'jtgj-SS_Traffic-TrafficKey':['TrafficKey'],
                    'jtgj-SS_Traffic-TrafficName':['TrafficName'],
                    'jtgj-SS_Traffic-IsStop':['IsStop']
                  },
                  bindmethod:{'onClick': ['setAssociate'] },
                  url:'/Tree/GetBaseTrafficTree',
                  customBindFirst:true,
                  findParent:false,
                  retStatus:'4',
                  method:'post'">
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" style="width: 600px" data-options="fit:true">
        <table border="0" style="height:auto; width: auto;padding: 0 0 0 150px">
            <tr>
                <td colspan="4" style="height: 100px;">
                    <div style="font-size: x-large; text-align: center;">
                        交&nbsp;通&nbsp;工&nbsp;具</div>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-TrafficKey">
                        交通工具编号</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="jtgj-SS_Traffic-TrafficKey" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-TrafficName">
                        交通工具名称</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="jtgj-SS_Traffic-TrafficName" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="jtgj-SS_Traffic-IsStop" data-options="forbidstatus:[4]"/>是否停用
                </td>
            </tr>
        </table>
    </div>
    <input class="easyui-validatebox" id="jtgj-SS_Traffic-GUID" type="hidden"></input>
</div>
<label id="jtgj-extendregion" style="display: none">
    <input id="jtgj-status" type="text"/>
    <input id="initscope" type="text" value='jtgj'/>
    <input id="initstatus" type="text" value='4'/>
    <input id="initguid" type="text" value=''/>
</label>
<div id="b-window" line="true"></div>

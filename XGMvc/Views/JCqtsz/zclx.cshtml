@{
    Layout = "~/Views/master/_Layout.cshtml";
    ViewBag.Title = "支出类型";
}
<script src="../../Scripts/jc/jcCommon.js" type="text/javascript"></script>
<div class="easyui-layout" id="zclx-dataregion" data-options="fit:true" z="1">
    <div data-options="region:'north'" style="height: 51px">
        <div style="padding: 2px 0 2px 2px; background: #fafafa; border: 1px solid #ccc;">
                   <a href="#" class="easyui-linkbutton" 
                   id="zclx-add" 
                   data-options="plain:'true',iconCls:'icon-xinzeng',
                   bindmethod:{ 'click':['newlyAdd'] },scope:'zclx',status:'1',
                   forbidstatus:[1,2,3]">新增</a> 
                   
                   <a href="#" class="easyui-linkbutton"
                   id="zclx-edit" data-options="plain:'true',iconCls:'icon-xiugai',
                   docState:'zclx-SS_ExpendType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'zclx',status:'2',
                   forbidstatus:[1,2,3]">修改</a> 
                       
                   <a href="#" class="easyui-linkbutton" 
                   id="zclx-remove" 
                   data-options="plain:'true',iconCls:'icon-shanchu',
                   docState:'zclx-SS_ExpendType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'zclx',status:'3',
                   forbidstatus:[1,2,3]">删除</a>

                   <a href="#" class="easyui-linkbutton" id="zclx-disable"
                   data-options="plain:'true',iconCls:'icon-tingyong',
                   bindmethod:{ 'click': ['setDisable'] },
                   bindparms:{'setDisable':['zclx-SS_ExpendType-IsStop','zclx-tree-PayOutType']},scope:'zclx',status:'2',
                   forbidstatus:[1,2,3]">停用</a> 

                   <a href="#" class="easyui-linkbutton" id="zclx-enable"
                   data-options="plain:'true',iconCls:'icon-qiyong',
                   bindmethod:{ 'click': ['setEnable'] },
                   bindparms:{'setEnable':['zclx-SS_ExpendType-IsStop','zclx-tree-PayOutType']},scope:'zclx',status:'2',
                   forbidstatus:[1,2,3]">启用</a>

                   <a href="#" class="easyui-linkbutton" id="zclx-cancel" data-options="
                    plain:'true',iconCls:'icon-quxiao', scope:'zclx',forbidstatus:[4],
                    bindmethod:{ 'click': ['cancel'] }">取消</a> 
                   
                   <a href="#" class="easyui-linkbutton" id="zclx-save"
                   data-options="plain:'true',iconCls:'icon-baocun',
                   treeId:['zclx-tree-PayOutType'],
                   bindmethod:{ 'click': ['saveDoc'] },
                   bindparms:{'saveDoc':['/JCqtsz/Save']},scope:'zclx',status:'4',
                   forbidstatus:[4]">保存</a> 
                 
                   <a href="#" class="easyui-linkbutton"
                   id="zclx-close" data-options="plain:'true',iconCls:'icon-tuichu',
                   bindmethod:{ 'click': ['closeTab'] },
                   scope:'zclx'">退出</a>
        </div>
    </div>
    <div data-options="region:'west',split:'true'" style="width: 300px">
        <div class="easyui-tabs" data-options="fit:true">
            <div title="支出类型">
                <ul class="easyui-tree" id="zclx-tree-PayOutType" 
                 data-options="associate:{
                    'zclx-SS_ExpendType-GUID':['GUID'],
                    'zclx-SS_ExpendType-ExpendTypeKey':['ExpendTypeKey'],
                    'zclx-SS_ExpendType-ExpendTypeName':['ExpendTypeName'],
                    'zclx-SS_ExpendType-IsStop':['IsStop']
                  },
                  bindmethod:{'onClick': ['setAssociate'] },
                  url:'/Tree/GetPayOutType',
                  customBindFirst:true,
                  findParent:false,
                  retStatus:'4',
                  method:'post'">
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" style="width: 600px" data-options="fit:true">
        <table border="0" style="height:auto; width: auto;padding: 0 0 0 150px">
            <tr>
                <td colspan="4" style="height: 100px;">
                    <div style="font-size: x-large; text-align: center;">
                        支&nbsp;出&nbsp;类&nbsp;型</div>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-ExpendTypeKey">
                        支出类型编号</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="zclx-SS_ExpendType-ExpendTypeKey" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-ExpendTypeName">
                        支出类型名称</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="zclx-SS_ExpendType-ExpendTypeName" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="zclx-SS_ExpendType-IsStop" data-options="forbidstatus:[4]"/>是否停用
                </td>
            </tr>
        </table>
    </div>
    <input class="easyui-validatebox" id="zclx-SS_ExpendType-GUID" type="hidden"></input>
</div>
<label id="zclx-extendregion" style="display: none">
    <input id="zclx-status" type="text"/>
    <input id="initscope" type="text" value='zclx'/>
    <input id="initstatus" type="text" value='4'/>
    <input id="initguid" type="text" value=''/>
</label>
<div id="b-window" line="true"></div>

@{
    Layout = "~/Views/master/_Layout.cshtml";
    ViewBag.Title = "收入类型设置";
}
<script src="../../Scripts/jc/jcCommon.js" type="text/javascript"></script>
<div class="easyui-layout" id="srlxsz-dataregion" data-options="fit:true" z="1">
    <div data-options="region:'north'" style="height: 51px">
        <div style="padding: 2px 0 2px 2px; background: #fafafa; border: 1px solid #ccc;">
                   <a href="#" class="easyui-linkbutton" 
                   id="srlxsz-add" 
                   data-options="plain:'true',iconCls:'icon-xinzeng',
                   bindmethod:{ 'click':['newlyAdd'] },scope:'srlxsz',status:'1',
                   forbidstatus:[1,2,3]">新增</a> 
                   
                   <a href="#" class="easyui-linkbutton"
                   id="srlxsz-edit" data-options="plain:'true',iconCls:'icon-xiugai',
                   docState:'srlxsz-SS_SRType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'srlxsz',status:'2',
                   forbidstatus:[1,2,3]">修改</a> 
                       
                   <a href="#" class="easyui-linkbutton" 
                   id="srlxsz-remove" 
                   data-options="plain:'true',iconCls:'icon-shanchu',
                   docState:'srlxsz-SS_SRType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'srlxsz',status:'3',
                   forbidstatus:[1,2,3]">删除</a>

                   <a href="#" class="easyui-linkbutton" id="srlxsz-disable"
                   data-options="plain:'true',iconCls:'icon-tingyong',
                   bindmethod:{ 'click': ['setDisable'] },
                   bindparms:{'setDisable':['srlxsz-SS_SRType-IsStop','srlxsz-tree-SrType']},scope:'srlxsz',status:'2',
                   forbidstatus:[1,2,3]">停用</a> 

                   <a href="#" class="easyui-linkbutton" id="srlxsz-enable"
                   data-options="plain:'true',iconCls:'icon-qiyong',
                   bindmethod:{ 'click': ['setEnable'] },
                   bindparms:{'setEnable':['srlxsz-SS_SRType-IsStop','srlxsz-tree-SrType']},scope:'srlxsz',status:'2',
                   forbidstatus:[1,2,3]">启用</a>

                   <a href="#" class="easyui-linkbutton" id="srlxsz-cancel" data-options="
                    plain:'true',iconCls:'icon-quxiao', scope:'srlxsz',forbidstatus:[4],
                    bindmethod:{ 'click': ['cancel'] }">取消</a> 
                   
                   <a href="#" class="easyui-linkbutton" id="srlxsz-save"
                   data-options="plain:'true',iconCls:'icon-baocun',
                   treeId:['srlxsz-tree-SrType'],
                   bindmethod:{ 'click': ['saveDoc'] },
                   bindparms:{'saveDoc':['/JCqtsz/Save']},scope:'srlxsz',status:'4',
                   forbidstatus:[4]">保存</a> 
                 
                   <a href="#" class="easyui-linkbutton"
                   id="srlxsz-close" data-options="plain:'true',iconCls:'icon-tuichu',
                   bindmethod:{ 'click': ['closeTab'] },
                   scope:'srlxsz'">退出</a>
        </div>
    </div>
    <div data-options="region:'west',split:'true'" style="width: 300px">
        <div class="easyui-tabs" data-options="fit:true">
            <div title="收入类型">
                <ul class="easyui-tree" id="srlxsz-tree-SrType" 
                 data-options="associate:{
                    'srlxsz-SS_SRType-SRTypeKey':['SRTypeKey'],
                    'srlxsz-SS_SRType-SRTypeName':['SRTypeName'],
                    'srlxsz-SS_SRType-PGUID':['PGUID','PKey'],
                    'srlxsz-SS_SRType-PName':['PGUID','PName'],
                    'srlxsz-SS_SRType-GUID':['GUID'],
                    'srlxsz-SS_SRType-IsStop':['IsStop']
                  },
                  associateEx:{
                    'srlxsz-SS_SRType-PGUID':['GUID','SRTypeKey'],
                    'srlxsz-SS_SRType-PName':['GUID','SRTypeName'],
                    'srlxsz-SS_SRType-IsStop':['IsStop']
                  },
                  IsDocStatusAssociate:true,
                  bindmethod:{'onClick': ['setAssociate'] },
                  url:'/Tree/GetBaseSrTypeTree',
                  customBindFirst:true,
                  findParent:true,
                  scope:'srlxsz',
                  retStatus:'4',
                  method:'post'">
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" style="width: 600px" data-options="fit:true">
        <table border="0" style="height:auto; width: auto;padding: 0 0 0 150px">
            <tr>
                <td colspan="4" style="height: 100px;">
                    <div style="font-size: x-large; text-align: center;">
                        收&nbsp;入&nbsp;类&nbsp;型&nbsp;档&nbsp;案</div>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-SRTypeKey">
                        类&nbsp;型&nbsp;编&nbsp;号</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="srlxsz-SS_SRType-SRTypeKey" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-SRTypeName">
                        类&nbsp;型&nbsp;名&nbsp;称</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="srlxsz-SS_SRType-SRTypeName" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-PKey">
                        上级收入类型编号</label>
                </td>
                <td>
                    <select class="easyui-combogrid" id="srlxsz-SS_SRType-PGUID" 
                        data-options="
                        columns:[[
                            {field:'GUID',hidden:'true'},
                            {field:'SRTypeKey',title:'收入类型编号',width:'100'},
                            {field:'SRTypeName',title:'收入类型名称',width:'150'}
                            ]],
                        width:155,
                        panelWidth:300,
                        method:'post',
                        remoteUrl:'/Combogrid/BaseSRType',
                        idField:'GUID',
                        textField:'SRTypeKey',
                        filterField:'SRTypeKey,SRTypeName',
                        bindmethod: { 'onCloseEx': ['setAssociate'] },
                        forbidstatus:[4],
                        required:false,
                        singleSelect:true,
                        editable:true,
                        rownumbers:true,
                        associate:
                            {
                                'srlxsz-SS_SRType-PName':['GUID','SRTypeName'],
                                'srlxsz-SS_SRType-IsStop':['IsStop']
                            }">
                    </select>
                </td>
                <td>
                    <label for="field1" id="lbl-PName">
                        上级收入类型名称</label>
                </td>
                <td>
                    <select class="easyui-combogrid" id="srlxsz-SS_SRType-PName" 
                        data-options="
                        columns:[[
                            {field:'GUID',hidden:'true'},
                            {field:'SRTypeKey',title:'收入类型编号',width:'100'},
                            {field:'SRTypeName',title:'收入类型名称',width:'150'}
                            ]],
                        width:155,
                        panelWidth:300,
                        method:'post',
                        remoteUrl:'/Combogrid/BaseSRType',
                        idField:'GUID',
                        textField:'SRTypeName',
                        filterField:'SRTypeKey,SRTypeName',
                        bindmethod: { 'onCloseEx': ['setAssociate'] },
                        forbidstatus:[4],
                        required:false,
                        singleSelect:true,
                        editable:true,
                        rownumbers:true,
                        associate:
                            {
                                'srlxsz-SS_SRType-PGUID':['GUID','SRTypeKey'],
                                'srlxsz-SS_SRType-IsStop':['IsStop']
                            }">
                    </select>
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="srlxsz-SS_SRType-IsStop" data-options="forbidstatus:[4]"/>是否停用
                </td>
            </tr>
        </table>
    </div>
    <input class="easyui-validatebox" id="srlxsz-SS_SRType-GUID" type="hidden"></input>
</div>
<label id="srlxsz-extendregion" style="display: none">
    <input id="srlxsz-status" type="text"/>
    <input id="initscope" type="text" value='srlxsz'/>
    <input id="initstatus" type="text" value='4'/>
    <input id="initguid" type="text" value=''/>
</label>
<div id="b-window" line="true"></div>

@{
    Layout = "~/Views/master/_Layout.cshtml";
    ViewBag.Title = "结算方式设置";
}
<script src="../../Scripts/jc/jcCommon.js" type="text/javascript"></script>
<div class="easyui-layout" id="jsfssz-dataregion" data-options="fit:true" z="1">
    <div data-options="region:'north'" style="height: 51px">
        <div style="padding: 2px 0 2px 2px; background: #fafafa; border: 1px solid #ccc;">
                   <a href="#" class="easyui-linkbutton" 
                   id="jsfssz-add" 
                   data-options="plain:'true',iconCls:'icon-xinzeng',
                   bindmethod:{ 'click':['newlyAdd'] },scope:'jsfssz',status:'1',
                   forbidstatus:[1,2,3]">新增</a> 
                   
                   <a href="#" class="easyui-linkbutton"
                   id="jsfssz-edit" data-options="plain:'true',iconCls:'icon-xiugai',
                   docState:'jsfssz-SS_SettleType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'jsfssz',status:'2',
                   forbidstatus:[1,2,3]">修改</a> 
                       
                   <a href="#" class="easyui-linkbutton" 
                   id="jsfssz-remove" 
                   data-options="plain:'true',iconCls:'icon-shanchu',
                   docState:'jsfssz-SS_SettleType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'jsfssz',status:'3',
                   forbidstatus:[1,2,3]">删除</a>

                   <a href="#" class="easyui-linkbutton" id="jsfssz-disable"
                   data-options="plain:'true',iconCls:'icon-tingyong',
                   bindmethod:{ 'click': ['setDisable'] },
                   bindparms:{'setDisable':['jsfssz-SS_SettleType-IsStop','jsfssz-tree-SettleType']},scope:'jsfssz',status:'2',
                   forbidstatus:[1,2,3]">停用</a> 

                   <a href="#" class="easyui-linkbutton" id="jsfssz-enable"
                   data-options="plain:'true',iconCls:'icon-qiyong',
                   bindmethod:{ 'click': ['setEnable'] },
                   bindparms:{'setEnable':['jsfssz-SS_SettleType-IsStop','jsfssz-tree-SettleType']},scope:'jsfssz',status:'2',
                   forbidstatus:[1,2,3]">启用</a>

                   <a href="#" class="easyui-linkbutton" id="jsfssz-cancel" data-options="
                    plain:'true',iconCls:'icon-quxiao', scope:'jsfssz',forbidstatus:[4],
                    bindmethod:{ 'click': ['cancel'] }">取消</a> 
                   
                   <a href="#" class="easyui-linkbutton" id="jsfssz-save"
                   data-options="plain:'true',iconCls:'icon-baocun',
                   treeId:['jsfssz-tree-SettleType'],
                   bindmethod:{ 'click': ['saveDoc'] },
                   bindparms:{'saveDoc':['/JCqtsz/Save']},scope:'jsfssz',status:'4',
                   forbidstatus:[4]">保存</a> 
                 
                   <a href="#" class="easyui-linkbutton"
                   id="jsfssz-close" data-options="plain:'true',iconCls:'icon-tuichu',
                   bindmethod:{ 'click': ['closeTab'] },
                   scope:'jsfssz'">退出</a>
        </div>
    </div>
    <div data-options="region:'west',split:'true'" style="width: 300px">
        <div class="easyui-tabs" data-options="fit:true">
            <div title="支出类型">
                <ul class="easyui-tree" id="jsfssz-tree-SettleType" 
                 data-options="associate:{
                    'jsfssz-SS_SettleType-GUID':['GUID'],
                    'jsfssz-SS_SettleType-SettleTypeKey':['SettleTypeKey'],
                    'jsfssz-SS_SettleType-SettleTypeName':['SettleTypeName'],
                    'jsfssz-SS_SettleType-IsStop':['IsStop'],
                    'jsfssz-SS_SettleType-IsCash':['IsCash'],
                    'jsfssz-SS_SettleType-IsCheck':['IsCheck'],
                  },
                  bindmethod:{'onClick': ['setAssociate'] },
                  url:'/Tree/GetBaseSettleType',
                  customBindFirst:true,
                  findParent:false,
                  retStatus:'4',
                  method:'post'">
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" style="width: 600px" data-options="fit:true">
        <table border="0" style="height:auto; width: auto;padding: 0 0 0 150px">
            <tr>
                <td colspan="4" style="height: 100px;">
                    <div style="font-size: x-large; text-align: center;">
                        结&nbsp;算&nbsp;方&nbsp;式&nbsp;设&nbsp;置</div>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-SettleTypeKey">
                        结算方式编号</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="jsfssz-SS_SettleType-SettleTypeKey" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-SettleTypeName">
                        结算方式名称</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="jsfssz-SS_SettleType-SettleTypeName" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="jsfssz-SS_SettleType-IsCash" data-options="forbidstatus:[4]"/>是否现金
                </td>
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="jsfssz-SS_SettleType-IsCheck" data-options="forbidstatus:[4]"/>是否支票
                </td>
            </tr>
             <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="jsfssz-SS_SettleType-IsStop" data-options="forbidstatus:[4]"/>是否停用
                </td>
            </tr>
        </table>
    </div>
    <input class="easyui-validatebox" id="jsfssz-SS_SettleType-GUID" type="hidden"></input>
</div>
<label id="jsfssz-extendregion" style="display: none">
    <input id="jsfssz-status" type="text"/>
    <input id="initscope" type="text" value='jsfssz'/>
    <input id="initstatus" type="text" value='4'/>
    <input id="initguid" type="text" value=''/>
</label>
<div id="b-window" line="true"></div>

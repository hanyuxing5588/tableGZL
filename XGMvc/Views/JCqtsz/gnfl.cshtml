@{
    Layout = "~/Views/master/_Layout.cshtml";
    ViewBag.Title = "功能分类";
}
<script src="../../Scripts/jc/jcCommon.js" type="text/javascript"></script>
<div class="easyui-layout" id="gnfl-dataregion" data-options="fit:true" z="1">
    <div data-options="region:'north'" style="height: 51px">
        <div style="padding: 2px 0 2px 2px; background: #fafafa; border: 1px solid #ccc;">
                   <a href="#" class="easyui-linkbutton" 
                   id="gnfl-add" 
                   data-options="plain:'true',iconCls:'icon-xinzeng',
                   bindmethod:{ 'click':['newlyAdd'] },scope:'gnfl',status:'1',
                   forbidstatus:[1,2,3]">新增</a> 
                   
                   <a href="#" class="easyui-linkbutton"
                   id="gnfl-edit" data-options="plain:'true',iconCls:'icon-xiugai',
                   docState:'gnfl-SS_FunctionClass-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'gnfl',status:'2',
                   forbidstatus:[1,2,3]">修改</a> 
                       
                   <a href="#" class="easyui-linkbutton" 
                   id="gnfl-remove" 
                   data-options="plain:'true',iconCls:'icon-shanchu',
                   docState:'gnfl-SS_FunctionClass-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'gnfl',status:'3',
                   forbidstatus:[1,2,3]">删除</a>

                   <a href="#" class="easyui-linkbutton" id="gnfl-disable"
                   data-options="plain:'true',iconCls:'icon-tingyong',
                   bindmethod:{ 'click': ['setDisable'] },
                   bindparms:{'setDisable':['gnfl-SS_FunctionClass-IsStop','gnfl-tree-PayOutType']},scope:'gnfl',status:'2',
                   forbidstatus:[1,2,3]">停用</a> 

                   <a href="#" class="easyui-linkbutton" id="gnfl-enable"
                   data-options="plain:'true',iconCls:'icon-qiyong',
                   bindmethod:{ 'click': ['setEnable'] },
                   bindparms:{'setEnable':['gnfl-SS_FunctionClass-IsStop','gnfl-tree-PayOutType']},scope:'gnfl',status:'2',
                   forbidstatus:[1,2,3]">启用</a>

                   <a href="#" class="easyui-linkbutton" id="gnfl-cancel" data-options="
                    plain:'true',iconCls:'icon-quxiao', scope:'gnfl',forbidstatus:[4],
                    bindmethod:{ 'click': ['cancel'] }">取消</a> 
                   
                   <a href="#" class="easyui-linkbutton" id="gnfl-save"
                   data-options="plain:'true',iconCls:'icon-baocun',
                   treeId:['gnfl-tree-PayOutType'],
                   bindmethod:{ 'click': ['saveDoc'] },
                   bindparms:{'saveDoc':['/JCqtsz/Save']},scope:'gnfl',status:'4',
                   forbidstatus:[4]">保存</a> 
                 
                   <a href="#" class="easyui-linkbutton"
                   id="gnfl-close" data-options="plain:'true',iconCls:'icon-tuichu',
                   bindmethod:{ 'click': ['closeTab'] },
                   scope:'gnfl'">退出</a>
        </div>
    </div>
    <div data-options="region:'west',split:'true'" style="width: 300px">
        <div class="easyui-tabs" data-options="fit:true">
            <div title="功能分类">
                <ul class="easyui-tree" id="gnfl-tree-PayOutType" 
                 data-options="associate:{
                    'gnfl-SS_FunctionClass-FunctionClassKey':['FunctionClassKey'],
                    'gnfl-SS_FunctionClass-FunctionClassName':['FunctionClassName'],
                    'gnfl-SS_FunctionClass-PGUID':['PGUID','PKey'],
                    'gnfl-SS_FunctionClass-PName':['PGUID','PName'],
                    'gnfl-SS_FunctionClass-GUID':['GUID'],
                    'gnfl-SS_FunctionClass-FinanceCode':['FinanceCode'],
                    'gnfl-SS_FunctionClass-BeginYear':['BeginYear'],
                    'gnfl-SS_FunctionClass-IsDefault':['IsDefault'],
                    'gnfl-SS_FunctionClass-IsProject':['IsProject'],
                    'gnfl-SS_FunctionClass-IsStop':['IsStop']
                  },
                  associateEx:{
                    'gnfl-SS_FunctionClass-PGUID':['GUID','FunctionClassKey'],
                    'gnfl-SS_FunctionClass-PName':['GUID','FunctionClassName'],
                    'gnfl-SS_FunctionClass-FinanceCode':['FinanceCode'],
                    'gnfl-SS_FunctionClass-BeginYear':['BeginYear'],
                    'gnfl-SS_FunctionClass-IsDefault':['IsDefault'],
                    'gnfl-SS_FunctionClass-IsProject':['IsProject'],
                    'gnfl-SS_FunctionClass-IsStop':['IsStop']
                  },
                  IsDocStatusAssociate:true,
                  bindmethod:{'onClick': ['setAssociate'] },
                  url:'/Tree/GetBaseFunclassClassTree',
                  customBindFirst:true,
                  findParent:true,
                  scope:'gnfl',
                  retStatus:'4',
                  method:'post'">
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" style="width: 600px" data-options="fit:true">
        <table border="0" style="height:auto; width: auto;padding: 0 0 0 150px">
            <tr>
                <td colspan="4" style="height: 100px;">
                    <div style="font-size: x-large; text-align: center;">
                        功&nbsp;能&nbsp;分&nbsp;类</div>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-FunctionClassKey">
                        分&nbsp;类&nbsp;编&nbsp;号</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="gnfl-SS_FunctionClass-FunctionClassKey" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-FinanceCode">
                        政府收支分类</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="gnfl-SS_FunctionClass-FinanceCode" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-FunctionClassName">
                        分&nbsp;类&nbsp;名&nbsp;称</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="gnfl-SS_FunctionClass-FunctionClassName" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-BeginYear">
                        年&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;份</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="gnfl-SS_FunctionClass-BeginYear" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-PKey">
                        上级分类编号</label>
                </td>
                <td>
                    <select class="easyui-combogrid" id="gnfl-SS_FunctionClass-PGUID" 
                        data-options="
                        columns:[[
                            {field:'GUID',hidden:'true'},
                            {field:'FinanceCode',hidden:'true'},
                            {field:'BeginYear',hidden:'true'},
                            {field:'FunctionClassKey',title:'功能分类编号',width:'100'},
                            {field:'FunctionClassName',title:'功能分类名称',width:'150'}
                            ]],
                        width:155,
                        panelWidth:300,
                        method:'post',
                        remoteUrl:'/Combogrid/FuncClass',
                        idField:'GUID',
                        textField:'FunctionClassKey',
                        filterField:'FunctionClassKey,FunctionClassName',
                        bindmethod: { 'onCloseEx': ['setAssociate'] },
                        forbidstatus:[4],
                        required:false,
                        singleSelect:true,
                        editable:true,
                        rownumbers:true,
                        associate:
                            {
                                'gnfl-SS_FunctionClass-FinanceCode':['FinanceCode'],
                                'gnfl-SS_FunctionClass-BeginYear':['BeginYear'],
                                'gnfl-SS_FunctionClass-PName':['GUID','FunctionClassName'],
                                'gnfl-SS_FunctionClass-IsDefault':['IsDefault'],
                                'gnfl-SS_FunctionClass-IsProject':['IsProject'],
                                'gnfl-SS_FunctionClass-IsStop':['IsStop']
                            }">
                    </select>
                </td>
                <td>
                    <label for="field1" id="lbl-PName">
                        上级分类名称</label>
                </td>
                <td>
                    <select class="easyui-combogrid" id="gnfl-SS_FunctionClass-PName" 
                        data-options="
                        columns:[[
                            {field:'GUID',hidden:'true'},
                            {field:'FinanceCode',hidden:'true'},
                            {field:'BeginYear',hidden:'true'},
                            {field:'FunctionClassKey',title:'功能分类编号',width:'100'},
                            {field:'FunctionClassName',title:'功能分类名称',width:'150'}
                            ]],
                        width:155,
                        panelWidth:300,
                        method:'post',
                        remoteUrl:'/Combogrid/FuncClass',
                        idField:'GUID',
                        textField:'FunctionClassName',
                        filterField:'FunctionClassKey,FunctionClassName',
                        bindmethod: { 'onCloseEx': ['setAssociate'] },
                        forbidstatus:[4],
                        required:false,
                        singleSelect:true,
                        editable:true,
                        rownumbers:true,
                        associate:
                            {
                                'gnfl-SS_FunctionClass-FinanceCode':['FinanceCode'],
                                'gnfl-SS_FunctionClass-BeginYear':['BeginYear'],
                                'gnfl-SS_FunctionClass-PGUID':['GUID','FunctionClassKey'],
                                'gnfl-SS_FunctionClass-IsDefault':['IsDefault'],
                                'gnfl-SS_FunctionClass-IsProject':['IsProject'],
                                'gnfl-SS_FunctionClass-IsStop':['IsStop']
                            }">
                    </select>
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="gnfl-SS_FunctionClass-IsDefault" data-options="forbidstatus:[4]"/>是否默认
                </td>
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="gnfl-SS_FunctionClass-IsProject" data-options="forbidstatus:[4]"/>是否项目
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="gnfl-SS_FunctionClass-IsStop" data-options="forbidstatus:[4]"/>是否停用
                </td>
            </tr>
        </table>
    </div>
    <input class="easyui-validatebox" id="gnfl-SS_FunctionClass-GUID" type="hidden"></input>
</div>
<label id="gnfl-extendregion" style="display: none">
    <input id="gnfl-status" type="text"/>
    <input id="initscope" type="text" value='gnfl'/>
    <input id="initstatus" type="text" value='4'/>
    <input id="initguid" type="text" value=''/>
</label>
<div id="b-window" line="true"></div>

@{
    Layout = "~/Views/master/_Layout.cshtml";
    ViewBag.Title = "应收应付类型";
}
<script src="../../Scripts/jc/jcCommon.js" type="text/javascript"></script>
<div class="easyui-layout" id="ysyflx-dataregion" data-options="fit:true" z="1">
    <div data-options="region:'north'" style="height: 51px">
        <div style="padding: 2px 0 2px 2px; background: #fafafa; border: 1px solid #ccc;">
                   <a href="#" class="easyui-linkbutton" 
                   id="ysyflx-add" 
                   data-options="plain:'true',iconCls:'icon-xinzeng',
                   bindmethod:{ 'click':['newlyAdd'] },scope:'ysyflx',status:'1',
                   forbidstatus:[1,2,3]">新增</a> 
                   
                   <a href="#" class="easyui-linkbutton"
                   id="ysyflx-edit" data-options="plain:'true',iconCls:'icon-xiugai',
                   docState:'ysyflx-SS_WLType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'ysyflx',status:'2',
                   forbidstatus:[1,2,3]">修改</a> 
                       
                   <a href="#" class="easyui-linkbutton" 
                   id="ysyflx-remove" 
                   data-options="plain:'true',iconCls:'icon-shanchu',
                   docState:'ysyflx-SS_WLType-DocState',
                   bindmethod:{ 'click': ['setStatus'] },scope:'ysyflx',status:'3',
                   forbidstatus:[1,2,3]">删除</a>

                   <a href="#" class="easyui-linkbutton" id="ysyflx-disable"
                   data-options="plain:'true',iconCls:'icon-tingyong',
                   bindmethod:{ 'click': ['setDisable'] },
                   bindparms:{'setDisable':['ysyflx-SS_WLType-IsStop','ysyflx-tree-WLType']},scope:'ysyflx',status:'2',
                   forbidstatus:[1,2,3]">停用</a> 

                   <a href="#" class="easyui-linkbutton" id="ysyflx-enable"
                   data-options="plain:'true',iconCls:'icon-qiyong',
                   bindmethod:{ 'click': ['setEnable'] },
                   bindparms:{'setEnable':['ysyflx-SS_WLType-IsStop','ysyflx-tree-WLType']},scope:'ysyflx',status:'2',
                   forbidstatus:[1,2,3]">启用</a>

                   <a href="#" class="easyui-linkbutton" id="ysyflx-cancel" data-options="
                    plain:'true',iconCls:'icon-quxiao', scope:'ysyflx',forbidstatus:[4],
                    bindmethod:{ 'click': ['cancel'] }">取消</a> 
                   
                   <a href="#" class="easyui-linkbutton" id="ysyflx-save"
                   data-options="plain:'true',iconCls:'icon-baocun',
                   treeId:['ysyflx-tree-WLType'],
                   bindmethod:{ 'click': ['saveDoc'] },
                   bindparms:{'saveDoc':['/JCqtsz/Save']},scope:'ysyflx',status:'4',
                   forbidstatus:[4]">保存</a> 
                 
                   <a href="#" class="easyui-linkbutton"
                   id="ysyflx-close" data-options="plain:'true',iconCls:'icon-tuichu',
                   bindmethod:{ 'click': ['closeTab'] },
                   scope:'ysyflx'">退出</a>
        </div>
    </div>
    <div data-options="region:'west',split:'true'" style="width: 300px">
        <div class="easyui-tabs" data-options="fit:true">
            <div title="功能分类">
                <ul class="easyui-tree" id="ysyflx-tree-WLType" 
                 data-options="associate:{
                    'ysyflx-SS_WLType-WLTypeKey':['WLTypeKey'],
                    'ysyflx-SS_WLType-WLTypeName':['WLTypeName'],
                    'ysyflx-SS_WLType-PGUID':['PGUID','PKey'],
                    'ysyflx-SS_WLType-PName':['PGUID','PName'],
                    'ysyflx-SS_WLType-GUID':['GUID'],
                    'ysyflx-SS_WLType-IsDC':['IsDC'],
                    'ysyflx-SS_WLType-IsCustomer':['IsCustomer'],
                    'ysyflx-SS_WLType-IsStop':['IsStop']
                  },
                  associateEx:{
                    'ysyflx-SS_WLType-PGUID':['GUID','WLTypeKey'],
                    'ysyflx-SS_WLType-PName':['GUID','WLTypeName'],
                    'ysyflx-SS_WLType-IsDC':['IsDC'],
                    'ysyflx-SS_WLType-IsCustomer':['IsCustomer'],
                    'ysyflx-SS_WLType-IsStop':['IsStop']
                  },
                  IsDocStatusAssociate:true,
                  bindmethod:{'onClick': ['setAssociate'] },
                  url:'/Tree/GetBaseWLTypeTree',
                  customBindFirst:true,
                  findParent:true,
                  scope:'ysyflx',
                  retStatus:'4',
                  method:'post'">
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" style="width: 600px" data-options="fit:true">
        <table border="0" style="height:auto; width: auto;padding: 0 0 0 150px">
            <tr>
                <td colspan="4" style="height: 100px;">
                    <div style="font-size: x-large; text-align: center;">
                        往&nbsp;来&nbsp;类&nbsp;型</div>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-WLTypeKey">
                        往来类型编号</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="ysyflx-SS_WLType-WLTypeKey" data-options="forbidstatus:[4]"/>
                </td>
                <td>
                    <label for="field1" id="lbl-WLTypeName">
                        往来类型名称</label>
                </td>
                <td>
                    <input class="easyui-validatebox" id="ysyflx-SS_WLType-WLTypeName" data-options="forbidstatus:[4]"/>
                </td>
            </tr>
            <tr style="height:50px;">
                <td>
                    <label for="field1" id="lbl-PKey">
                        上级分类编号</label>
                </td>
                <td>
                    <select class="easyui-combogrid" id="ysyflx-SS_WLType-PGUID" 
                        data-options="
                        columns:[[
                            {field:'GUID',hidden:'true'},
                            {field:'WLTypeKey',title:'往来类型编号',width:'100'},
                            {field:'WLTypeName',title:'往来类型名称',width:'150'}
                            ]],
                        width:155,
                        panelWidth:300,
                        method:'post',
                        remoteUrl:'/Combogrid/BaseWLType',
                        idField:'GUID',
                        textField:'WLTypeKey',
                        filterField:'WLTypeKey,WLTypeName',
                        bindmethod: { 'onCloseEx': ['setAssociate'] },
                        forbidstatus:[4],
                        required:false,
                        singleSelect:true,
                        editable:true,
                        rownumbers:true,
                        associate:
                            {
                                'ysyflx-SS_WLType-PName':['GUID','FunctionClassName'],
                                'ysyflx-SS_WLType-IsDC':['IsDC'],
                                'ysyflx-SS_WLType-IsCustomer':['IsCustomer'],
                                'ysyflx-SS_WLType-IsStop':['IsStop']
                            }">
                    </select>
                </td>
                <td>
                    <label for="field1" id="lbl-PName">
                        上级分类名称</label>
                </td>
                <td>
                    <select class="easyui-combogrid" id="ysyflx-SS_WLType-PName" 
                        data-options="
                        columns:[[
                            {field:'GUID',hidden:'true'},
                            {field:'WLTypeKey',title:'往来类型编号',width:'100'},
                            {field:'WLTypeName',title:'往来类型名称',width:'150'}
                            ]],
                        width:155,
                        panelWidth:300,
                        method:'post',
                        remoteUrl:'/Combogrid/BaseWLType',
                        idField:'GUID',
                        textField:'WLTypeName',
                        filterField:'WLTypeKey,WLTypeName',
                        bindmethod: { 'onCloseEx': ['setAssociate'] },
                        forbidstatus:[4],
                        required:false,
                        singleSelect:true,
                        editable:true,
                        rownumbers:true,
                        associate:
                            {
                                'ysyflx-SS_WLType-PGUID':['GUID','WLTypeName'],
                                'ysyflx-SS_WLType-IsDC':['IsDC'],
                                'ysyflx-SS_WLType-IsCustomer':['IsCustomer'],
                                'ysyflx-SS_WLType-IsStop':['IsStop']
                            }">
                    </select>
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="ysyflx-SS_WLType-IsDC" data-options="forbidstatus:[4]"/>是否借方
                </td>
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="ysyflx-SS_WLType-IsCustomer" data-options="forbidstatus:[4]"/>是否单位往来
                </td>
            </tr>
            <tr style="height:50px;">
                <td colspan="2">
                    <input type="checkbox" class="easyui-checkbox"  id="ysyflx-SS_WLType-IsStop" data-options="forbidstatus:[4]"/>是否停用
                </td>
            </tr>
        </table>
    </div>
    <input class="easyui-validatebox" id="ysyflx-SS_WLType-GUID" type="hidden"></input>
</div>
<label id="ysyflx-extendregion" style="display: none">
    <input id="ysyflx-status" type="text"/>
    <input id="initscope" type="text" value='ysyflx'/>
    <input id="initstatus" type="text" value='4'/>
    <input id="initguid" type="text" value=''/>
</label>
<div id="b-window" line="true"></div>

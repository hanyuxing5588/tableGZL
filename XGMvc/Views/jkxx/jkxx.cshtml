                    </tr>
                    <tr>
                        <td>
                            <table class="easyui-edatagrid" id="jkxx-" style="overflow: auto" data-options="scope:jkxx,height:200,
                                    width:600">
                                <thead>
                                    <tr>
                                        <th field="jkxx-OrderNum" title="行号" sortable="false" align="center">

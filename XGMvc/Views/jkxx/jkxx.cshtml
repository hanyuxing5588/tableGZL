                            <tr>
                                <td style="height: 30px">
                                    <div style="font-size: x-large; color: #0054E3;">
                                        借方单据</div>
                                </td>
                            </tr>
                            <tr>
                                <td style="height: 170px;">
                                    <table class="easyui-edatagrid" id="jkxx-" style="overflow: auto" data-options="scope:jkxx,height:170,
                                    width:350">
                                        <thead>
                                            <tr>

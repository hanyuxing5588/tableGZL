
<script src="../../Scripts/chart/highcharts.js" type="text/javascript"></script>
<script src="../../Scripts/chart/exporting.js" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
    //数据
    $(function () {
        var Linchart = function () {
            this.LoadData = function () {
                var month = $("#zmonth").val();                
                if(month==null || month==undefined || month=="")
                {
                    month=12;
                }
                $.ajax({
                    url: '/ReportChart/LoadChartData',
                    data: { year: $("#zyear").val(), month: month, xmKey: $("#zxmKey").val(), isLine: 1 },
                    error: function () {
                        $.messager.alert("请求发送失败");
                    },
                    success: function (data) {

                        if (!data || data.length == 0) {
                            data = { JinEData: [], BLData: [] };
                        }
                        var chart1 = $('#zhu1').highcharts();
                        var colors = Highcharts.getOptions().colors;
                        var data1 = [];
                        for (var i = 0; i < data.JinEData.length; i++) {
                            data1.push({ y: data.JinEData[i], color: colors[i] })
                        }
                        chart1.series[0].setData(data1);
                        //                            chart1.redraw();

                        var data2 = [];
                        for (var i = 0; i < data.BLData.length; i++) {
                            data2.push({ y: data.BLData[i], color: colors[i] })
                        }
                        var chart2 = $('#zhu2').highcharts();
                        chart2.series[0].setData(data2);
                        //                            chart2.redraw();
                    }
                });

            }
        }
        var colors = Highcharts.getOptions().colors,
        data = [{
            y: 55.11,
            color: colors[0]
        }, {
            y: 21.63,
            color: colors[1]
        }, {
            y: 11.94,
            color: colors[2]

        }, {
            y: 7.15,
            color: colors[3]
        }, {
            y: 2.14,
            color: colors[4]
        }];
        data1 = [{
            y: 55.11,
            color: colors[0]
        }, {
            y: 21.63,
            color: colors[1]
        }, {
            y: -11.94,
            color: colors[2]

        }, {
            y: 7.15,
            color: colors[3]
        }, {
            y: 2.14,
            color: colors[4]
        }];


        var chart = $('#zhu1').highcharts({

            chart: {
                height: $(document).height() - 100,
                type: 'column'
            },
            title: {
                text: ''
            },

            xAxis: {
                categories: ['本年安排投资', '当年额度支出', '期末账面支出', '应收款', '今年可用额度'],
                labels: {
                    rotaion: 50
                }
            },
            yAxis: {
                title: {
                    text: '金额（万元）'
                }
            },
            credits: {
                text: 'CAE'
            },
            plotOptions: {
                column: {
                    dataLabels: {
                        enabled: true,
                        color: colors[0],
                        style: {
                            fontWeight: 'bold'
                        },
                        formatter: function () {
                            return this.y;
                        }
                    }
                }
            },
            legend: {
                enabled: false
            },
            series: [{
                data: data
            }],
            exporting: {
                enabled: true
            }
        }).highcharts();
        var chart1 = $('#zhu2').highcharts({
            chart: {
                height: $(document).height() - 100,
                type: 'column'
            },
            plotOptions: {
                column: {
                    dataLabels: {
                        enabled: true,
                        color: colors[0],
                        style: {
                            fontWeight: 'bold'
                        },
                        formatter: function () {
                            return this.y;
                        }
                    }
                }
            },
            title: {
                text: ''
            },
            credits: {
                text: 'CAE'
            },
            chart: {
                type: 'column'
            },
            xAxis: {
                categories: ['上月执行率', '提高比率', '当前执行率', '计划执行率', '差额']
            },
            yAxis: {
                title: {
                    text: '比率（百分比）'
                }
            },
            tooltip: {
                formatter: function () {
                    s = this.x + ':<b>' + this.y + '% </b><br>';
                    return s;
                }
            },
            series: [{

                data: data1
            }],
            legend: {
                enabled: false
            },
            exporting: {
                enabled: true
            }
        }).highcharts();
        setTimeout(function () {
            new Linchart().LoadData();
        }, 100);
    });
</script>   
<body>
<table border=0 style="width:100%;height:100%">

<tr style="margin-bottom:20px">
<td style="width:100%;text-align:center" colspan="2" >
    <div style="font-size:30px;font-weight:bolder;">财政拨款专项经费执行情况图表</div>
</td>
</tr>
<tr>
<td style="width:50%">
    <div id="zhu1" ></div>
</td>
<td style="width:50%">
    <div id="zhu2" ></div>
</td>
</tr>
</table>
 <input id="zyear" type="hidden" value="@ViewData["year"]"/>
  <input id="zmonth" type="hidden" value="@ViewData["month"]"/>

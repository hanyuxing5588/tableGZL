@{
    Layout = "null";
    ViewBag.Title = "分部门借款情况分析图表";
}
<script src="../../Scripts/jquery-easyui-1.3.4/jquery-1.7.2.min.js" type="text/javascript"></script>
<script src="../../Scripts/chart/highcharts.js" type="text/javascript"></script>
<script src="../../Scripts/chart/exporting.js" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
    $(function () {
        $('#pie1').highcharts({
            chart: {
                type: 'pie',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
            },
            title: {
                text: '新借款'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    depth: 35,
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                    },
                    showInLegend: true
                }
            },
            series: [{
                type: 'pie',
                name: '占的比例',
                data: [
                ['国际局', 45.0],
                ['办公厅', 26.8],
                {
                    name: '三局',
                    y: 12.8,
                    sliced: true,
                    selected: true
                },
                ['二局', 8.5],
                ['一局', 6.2]
            ]
            }]
        });
        $('#pie2').highcharts({
            chart: {
                type: 'pie',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
            },
            title: {
                text: '一局'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    depth: 35,
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                    },
                    showInLegend: true
                }
            },
            series: [{
                type: 'pie',
                name: '占的比例',
                data: [
                ['2009年及以前', 45.0],
                ['2010年', 45.0],
                ['2011年', 26.8],
                {
                    name: '2012年',
                    y: 12.8,
                    sliced: true,
                    selected: true
                },
                ['2013年', 8.5],
                ['2014年', 6.2]
            ]
            }]
        });
        $('#pie3').highcharts({
            chart: {
                type: 'pie',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
            },
            title: {
                text: '办公厅借款笔数'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    depth: 35,
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                    },
                    showInLegend: true
                }
            },
            series: [{
                type: 'pie',
                name: '占的比例',
                data: [
                ['2009年及以前', 45.0],
                ['2010年', 45.0],
                ['2011年', 26.8],
                {
                    name: '2012年',
                    y: 12.8,
                    sliced: true,
                    selected: true
                },
                ['2013年', 8.5],
                ['2014年', 6.2]
            ]
            }]
        });
    });				
</script>
<body>
<table border=0 style="width:100%;height:100%">
<tr style="margin-bottom:20px">
<td style="width:100%;text-align:center" colspan="2">
    <div style="font-size:40px;font-weight:bolder;">分部门借款情况分析图表</div>
</td>
</tr>
<tr>
    <td></td>
    <td></td>
</tr>
<tr>
<td style="width:50%">
    <div id="pie1" style="height: 500px"></div>
</td>

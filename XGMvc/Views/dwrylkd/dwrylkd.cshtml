<script type="text/javascript">
    $(function () {
        InitData();
    });
    //初始数据
    function InitData() {
        SetDefaultValue();
        $("#dwrylkd-hz").click(function () {
            var url = '/dwrylkd/GetLoaddwrylkdHZData/';
            var type = "hz";
            GetData(url, type);
        });
        $("#dwrylkd-mx").click(function () {
            var url = '/dwrylkd/GetLoaddwrylkdMXData/';
            var type = "mx";
            GetData(url, type);
        });
        $("#dwrylkd-tuichu").click(function () {
            WindowClose();
        });
        $("#dwrylkd-export").click(function () {
            ExportExcel();
        })
    }
    function SetDefaultValue() {
        $("#dwrylkd-dwrylkd-Year").combobox("setValue", new Date().getFullYear());
        $("#dwrylkd-dwrylkd-Month").combobox("setValue",new Date().getMonth()+1);
    }
    //查询获取数据
    function GetData(url,type) {        
        var condition = {};
        condition.Year = $("#dwrylkd-dwrylkd-Year").combobox("getValue");
        condition.Month = $("#dwrylkd-dwrylkd-Month").combobox("getValue");
        condition.InvitePersonName = $("#dwrylkd-dwrylkd-InvitePersonName").validatebox("getValue");
        //result = $.extend(result, { TreeNodeList: treeCondition });\
        $('#dwrylkd-grid').datagrid("loading");
        $.ajax({
            url: url,
            data: { condition: JSON.stringify(condition) },
            dataType: "json",
            type: "POST",
            error: function (xmlhttprequest, textStatus, errorThrown) {
                $.messager.alert("错误", '网络超时,请重新登录', 'error');
            },
            success: function (data) {
                $('#dwrylkd-grid').datagrid("loaded");
                if (!data || data == null) {
                    return;
                }
                $('#dwrylkd-grid').datagrid('loadData', data);
                if (type == "mx") {
                    $('#dwrylkd-grid').datagrid('showColumn', 'DocNum');                    
                }
                else {
                    $('#dwrylkd-grid').datagrid('hideColumn', 'DocNum');                                      
                }

            }
        });

    }
    
    //关闭
    function WindowClose() {
        $($(parent.document).find("#closeTab")).click(); 
    }
    //导出数据    
    function ExportExcel() {debugger
        var l = $('#dwrylkd-grid').datagrid('getRows');
        if (l <= 1) {
            $.messager.alert('系统提示', '没有要输出的数据！');
            return;
        }
        var url = $.format("/dwrylkd/ExportdwrylkdReport?year={0}&month={1}", $("#dwrylkd-dwrylkd-Year").combobox("getValue"), $("#dwrylkd-dwrylkd-Month").combobox("getValue"))
        window.open(url);
    }
</script>
